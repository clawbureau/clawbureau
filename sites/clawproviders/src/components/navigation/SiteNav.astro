---
const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'Providers', href: '/providers/' },
  { label: 'Channels', href: '/channels/' },
  { label: 'Deploy', href: '/deploy/' },
  { label: 'SimpleClaw', href: '/simple-claw' },
  { label: 'Use Cases', href: '/use-cases' },
  { label: 'Setup', href: '/setup-guide' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-nav">
  <div class="container nav-container">
    <a href="/" class="logo">
      <span class="logo-icon">ðŸ¦ž</span>
      <span class="logo-text">ClawProviders</span>
    </a>
    <nav class="desktop-nav">
      <ul>
        {navLinks.map((link) => (
          <li>
            <a 
              href={link.href} 
              class={currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) ? 'active' : ''}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="nav-actions">
      <a href="https://github.com/openclaw/openclaw" class="btn btn-sm btn-outline" target="_blank" rel="noopener">
        <svg height="16" viewBox="0 0 16 16" width="16" style="fill: currentColor; margin-right: 6px;"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
        GitHub
      </a>
    </div>
  </div>
</header>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(10, 10, 11, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    height: 64px;
    display: flex;
    align-items: center;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
    transition: opacity 0.2s;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon {
    font-size: 1.25rem;
  }

  .desktop-nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  .desktop-nav a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .desktop-nav a:hover,
  .desktop-nav a.active {
    color: var(--text);
  }
  
  .desktop-nav a.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--accent);
    box-shadow: 0 0 8px var(--accent);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn-sm {
    padding: 0.4rem 0.8rem;
    font-size: 0.8125rem;
    height: 32px;
  }

  @media (max-width: 960px) {
    .desktop-nav {
      display: none;
    }
  }
</style>
