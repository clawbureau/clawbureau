{
  "channels": [
    {
      "id": "whatsapp",
      "name": "WhatsApp",
      "slug": "whatsapp",
      "description": "WhatsApp integration via the Baileys library implements the WhatsApp Web protocol. Connect your AI assistant to WhatsApp for DMs and group chats with media support, QR code authentication, and automatic reconnection.",
      "shortDescription": "Connect AI to WhatsApp via Baileys protocol",
      "website": "https://whatsapp.com",
      "protocolLibrary": "@whiskeysockets/baileys",
      "capabilities": {
        "dms": true,
        "groups": true,
        "threads": false,
        "topics": false,
        "media": true,
        "voice": true,
        "reactions": false,
        "nativeCommands": false
      },
      "configOptions": [
        {
          "key": "enabled",
          "type": "boolean",
          "required": false,
          "description": "Enable WhatsApp monitoring",
          "default": true
        },
        {
          "key": "accountId",
          "type": "string",
          "required": false,
          "description": "Identifier for multi-account support",
          "default": "default"
        },
        {
          "key": "dmPolicy",
          "type": "string",
          "required": false,
          "description": "DM access control policy",
          "default": "pairing"
        },
        {
          "key": "allowFrom",
          "type": "array",
          "required": false,
          "description": "Allowlist of JIDs for DM access"
        },
        {
          "key": "groupPolicy",
          "type": "string",
          "required": false,
          "description": "Group chat access policy",
          "default": "allowlist"
        },
        {
          "key": "mediaMaxMb",
          "type": "number",
          "required": false,
          "description": "Maximum media download size in MB",
          "default": 5
        }
      ],
      "configExample": "{\n  \"channels\": {\n    \"whatsapp\": {\n      \"enabled\": true,\n      \"dmPolicy\": \"pairing\",\n      \"allowFrom\": [\"111@s.whatsapp.net\"],\n      \"groupPolicy\": \"allowlist\",\n      \"mediaMaxMb\": 5\n    }\n  }\n}",
      "setupSteps": [
        "Enable WhatsApp in your openclaw.json configuration",
        "Start the OpenClaw gateway with 'openclaw gateway start'",
        "Scan the QR code displayed in terminal with WhatsApp mobile app",
        "Wait for authentication to complete",
        "Configure DM policy and allowlist for access control"
      ],
      "dmPolicies": ["allowlist", "pairing", "open"],
      "groupPolicies": ["allowlist", "open"],
      "textChunkLimit": 4096,
      "features": [
        "QR code authentication",
        "Multi-file auth state persistence",
        "Media handling (images, audio, video, documents)",
        "Contact and location message support",
        "Automatic reconnection with backoff",
        "Message deduplication"
      ],
      "pros": [
        "Most popular messaging app globally",
        "End-to-end encryption",
        "Rich media support",
        "Group chat support"
      ],
      "cons": [
        "Requires phone number",
        "QR login needs physical access initially",
        "No native bot API",
        "Session can expire"
      ],
      "useCases": [
        "Personal AI assistant",
        "Family group automation",
        "Business customer support",
        "Team communication"
      ]
    },
    {
      "id": "telegram",
      "name": "Telegram",
      "slug": "telegram",
      "description": "Telegram integration via the grammY library provides full bot API access. Support for DMs, groups, topics/forums, native commands, inline keyboards, and reactions.",
      "shortDescription": "Full-featured Telegram bot with commands and reactions",
      "website": "https://telegram.org",
      "protocolLibrary": "grammy",
      "capabilities": {
        "dms": true,
        "groups": true,
        "threads": false,
        "topics": true,
        "media": true,
        "voice": true,
        "reactions": true,
        "nativeCommands": true
      },
      "configOptions": [
        {
          "key": "botToken",
          "type": "string",
          "required": true,
          "description": "Telegram bot token from @BotFather",
          "envVar": "TELEGRAM_BOT_TOKEN"
        },
        {
          "key": "dmPolicy",
          "type": "string",
          "required": false,
          "description": "DM access control policy",
          "default": "pairing"
        },
        {
          "key": "allowFrom",
          "type": "array",
          "required": false,
          "description": "Allowlist of usernames or user IDs"
        },
        {
          "key": "historyLimit",
          "type": "number",
          "required": false,
          "description": "Group history retention",
          "default": 20
        },
        {
          "key": "reactionNotifications",
          "type": "string",
          "required": false,
          "description": "Reaction notification mode",
          "default": "own"
        }
      ],
      "configExample": "{\n  \"channels\": {\n    \"telegram\": {\n      \"botToken\": \"${TELEGRAM_BOT_TOKEN}\",\n      \"dmPolicy\": \"pairing\",\n      \"allowFrom\": [\"alice\", \"bob\"],\n      \"historyLimit\": 20,\n      \"reactionNotifications\": \"own\"\n    }\n  }\n}",
      "setupSteps": [
        "Create a bot with @BotFather on Telegram",
        "Copy the bot token provided",
        "Set TELEGRAM_BOT_TOKEN environment variable",
        "Add telegram configuration to openclaw.json",
        "Start the gateway and message your bot"
      ],
      "dmPolicies": ["allowlist", "pairing", "open"],
      "groupPolicies": ["allowlist", "open"],
      "textChunkLimit": 4096,
      "features": [
        "Native bot API support",
        "Forum/topics support",
        "Inline keyboards",
        "Reaction notifications",
        "Native slash commands",
        "Edit message support",
        "Multi-account support"
      ],
      "pros": [
        "Official bot API",
        "Rich bot features",
        "Cloud-based (no phone needed)",
        "Fast and reliable",
        "Forums/topics support"
      ],
      "cons": [
        "Bot accounts are separate from users",
        "Some features require group admin",
        "Learning curve for advanced features"
      ],
      "useCases": [
        "AI assistant bot",
        "Group automation",
        "Customer support bot",
        "Team productivity"
      ]
    },
