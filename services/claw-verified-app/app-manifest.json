{
  "name": "Claw Verified",
  "description": "Cryptographic verification for AI-generated pull requests. Validates Clawsig proof bundles against repo policy.",
  "url": "https://clawprotocol.org/github-app",
  "hook_attributes": {
    "url": "https://claw-verified-app.clawbureau.workers.dev/webhook",
    "active": true
  },
  "redirect_url": "https://clawprotocol.org/github-app/callback",
