{
  "$id": "https://schemas.clawbureau.org/claw.certification.directory_entry.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Clawsig Directory Entry",
  "description": "A public directory entry for a framework that has passed Clawsig Inside conformance testing.",
  "type": "object",
  "required": ["entry_version","framework_name","framework_repo","verified_tier","last_verified_at","badge_url","total_conformance_runs","status"],
  "properties": {
    "entry_version": {"type":"string","const":"1"},
    "framework_name": {"type":"string","minLength":1,"maxLength":128},
    "framework_repo": {"type":"string","format":"uri","pattern":"^https://github\\.com/.+$"},
    "framework_description": {"type":"string","maxLength":512},
    "verified_tier": {"type":"string","enum":["self","gateway","sandbox","tee"]},
    "last_verified_at": {"type":"string","format":"date-time"},
    "last_verified_version": {"type":"string","maxLength":64},
    "badge_url": {"type":"string","format":"uri"},
    "total_conformance_runs": {"type":"integer","minimum":0},
    "consecutive_passes": {"type":"integer","minimum":0},
    "status": {"type":"string","enum":["verified","expired","revoked"]},
    "status_reason": {"type":"string","maxLength":256},
    "claimer_did": {"type":"string","pattern":"^did:(key|web):.+"},
    "created_at": {"type":"string","format":"date-time"},
    "updated_at": {"type":"string","format":"date-time"}
  },
  "additionalProperties":false
}
