{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.clawbureau.com/compliance/compliance_report.v1.json",
  "title": "Compliance Report v1",
  "description": "Maps a verified Clawsig proof bundle to enterprise compliance framework controls (SOC2, ISO27001, EU AI Act, NIST AI RMF). Generated by clawverify-cli or the hosted verifier.",
  "type": "object",
  "required": [
    "report_version",
    "framework",
    "generated_at",
    "proof_bundle_hash_b64u",
    "agent_did",
    "controls"
  ],
  "properties": {
    "report_version": {
      "type": "string",
      "const": "1",
      "description": "Schema version. Always '1' for this schema."
    },
    "framework": {
      "type": "string",
      "enum": ["SOC2_Type2", "ISO27001", "EU_AI_Act", "NIST_AI_RMF"],
      "description": "Compliance framework this report maps to."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when this report was generated."
    },
    "proof_bundle_hash_b64u": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "minLength": 8,
      "description": "SHA-256 hash of the proof bundle this report covers, base64url (no padding)."
    },
    "agent_did": {
      "type": "string",
      "pattern": "^did:",
      "description": "DID of the agent whose proof bundle was evaluated."
    },
    "policy_hash_b64u": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "description": "SHA-256 hash of the Work Policy Contract evaluated against, base64url (no padding). Absent if no WPC was provided."
    },
    "controls": {
      "type": "array",
      "minItems": 1,
      "description": "Per-control evaluation results.",
      "items": {
        "type": "object",
        "required": ["control_id", "control_name", "status"],
        "properties": {
          "control_id": {
            "type": "string",
            "minLength": 1,
            "description": "Control identifier (e.g. CC6.1, CC8.1, Art14)."
          },
          "control_name": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable control name."
          },
          "status": {
            "type": "string",
            "enum": ["PASS", "FAIL", "NOT_APPLICABLE", "INSUFFICIENT_EVIDENCE"],
            "description": "Evaluation status for this control."
          },
          "evidence_type": {
            "type": "string",
            "enum": [
              "gateway_receipt",
              "tool_receipt",
              "side_effect_receipt",
              "human_approval_receipt",
              "wpc",
              "event_chain",
              "delegation_receipt",
              "log_inclusion_proof"
            ],
            "description": "Type of evidence used to evaluate this control."
          },
          "evidence_ref": {
            "type": "string",
            "description": "Receipt ID, hash, or other reference to the specific evidence artifact."
          },
          "narrative": {
            "type": "string",
            "description": "Human-readable explanation for auditors."
          }
        },
        "additionalProperties": false
      }
    },
    "gaps": {
      "type": "array",
      "description": "Controls that did not pass, with remediation guidance.",
      "items": {
        "type": "object",
        "required": ["control_id", "description", "recommendation"],
        "properties": {
          "control_id": {
            "type": "string",
            "minLength": 1,
            "description": "Control identifier that has a gap."
          },
          "description": {
            "type": "string",
            "description": "What evidence is missing or insufficient."
          },
          "recommendation": {
            "type": "string",
            "description": "Recommended remediation action."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
