{
  "$id": "https://schemas.clawbureau.org/claw.poh.commit_proof.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Commit Proof v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proof_version",
    "repo_claim_id",
    "commit_sha",
    "repository"
  ],
  "properties": {
    "proof_version": { "const": "1" },
    "repo_claim_id": { "type": "string", "minLength": 1 },
    "commit_sha": { "type": "string", "pattern": "^[a-fA-F0-9]{7,64}$" },
    "repository": { "type": "string", "minLength": 1 },
    "branch": { "type": "string" },
    "run_id": { "type": "string" },
    "proof_bundle_hash_b64u": { "type": "string" },
    "harness": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "metadata": { "type": "object" }
  }
}
