{
  "$id": "https://schemas.clawbureau.org/claw.insurance.insurance_auto_claim.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Insurance Auto Claim v1",
  "description": "Canonical deterministic auto-claim payload derived from normalized loss events.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "auto_claim_version",
    "loss_event_id",
    "claim_idempotency_key",
    "claimant_did",
    "policy_id",
    "requested_amount_minor",
    "currency",
    "evidence"
  ],
  "properties": {
    "auto_claim_version": {
      "const": "1"
    },
    "loss_event_id": {
      "type": "string",
      "minLength": 1
    },
    "claim_idempotency_key": {
      "type": "string",
      "minLength": 1
    },
    "claimant_did": {
      "type": "string",
      "pattern": "^did:[a-z0-9]+:[A-Za-z0-9._:-]+$"
    },
    "policy_id": {
      "type": "string",
      "pattern": "^pol_[a-f0-9-]+$"
    },
    "requested_amount_minor": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "currency": {
      "type": "string",
      "const": "USD"
    },
    "escrow_id": {
      "type": "string",
      "pattern": "^esc_[a-f0-9-]+$"
    },
    "trial_case_id": {
      "type": "string",
      "pattern": "^trc_[a-f0-9-]+$"
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["proof_bundle_hash_b64u", "receipt_refs", "artifact_refs"],
      "properties": {
        "proof_bundle_hash_b64u": {
          "type": "string",
          "minLength": 1
        },
        "receipt_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "artifact_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
